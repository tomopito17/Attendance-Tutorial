<% provide(:title, 'Sign up') %>
<% provide(:class_text, 'signup') %><!--#add8.11-->
<% provide(:button_text, '新規作成') %><!--#add8.11-->
<h1>ユーザー登録</h1>

<div class="row"><%#5.4%>
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
</div>

<%#
=begin  #8.11
    <%= form_with(model: @user, local: true) do |f| >%
      <%= render 'shared/error_messages' >%
      
      <%= f.label :name, class: "label-signup" >%
      <%= f.text_field :name, class: "form-control" >%

      <%= f.label :email, class: "label-signup" >%
      <%= f.email_field :email, class: "form-control" >%

      <%= f.label :password, class: "label-signup" >%
      <%= f.password_field :password, class: "form-control" >%

      <%= f.label :password_confirmation, "Confirmation", class: "label-signup" >%
      <%= f.password_field :password_confirmation, class: "form-control" >%

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup" >%
    <% end >%
  </div>
</div>

