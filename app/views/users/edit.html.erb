<% provide(:title, "Edit") %>
<% provide(:class_text, 'user--edit') %><!--#add8.11-->
<% provide(:button_text, '更新') %><!--#add8.11-->
<h1>ユーザー情報の更新</h1>

<div class="row"><!--#add8.11-->
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
</div>



<%#
#8.1.c91
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| >%
      <%= render 'shared/error_messages' >%

      <%= f.label :name, class: "label-user--edit" >%
      <%= f.text_field :name, class: "form-control" >%

      <%= f.label :email, class: "label-user--edit" >%
      <%= f.email_field :email, class: "form-control" >%

      <%= f.label :password, class: "label-user--edit" >%
      <%= f.password_field :password, class: "form-control" >%

      <%= f.label :password_confirmation, "Confirmation", class: "label-user--edit" >%
      <%= f.password_field :password_confirmation, class: "form-control" >%

      <%= f.submit "更新", class: "btn btn-primary btn-block btn-user--edit" >%
    <% end >%
  </div>
</div>
<% =end %>
